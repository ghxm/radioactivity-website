
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{ site_title }}{% if meta.title %} > {{ meta.title }}{% endif %}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}


    <!-- Bootstrap core CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


    
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="{{ theme_url }}/css/grid.css" type="text/css" />
    <link rel="stylesheet" href="{{ theme_url }}/css/radioact.css" type="text/css" />

  </head>

<body>

<div id="page">
    
    <div>
    <header class="px-0 py-3 my-0 mx-0 container-fluid site-header">

      <div class="row mx-0 ">


      <h1>{{ meta.title }}<a href="mailto:{{ config.contact }}">?</a></h1>
      <p class="lead" id="tagline">shamelessly copied from <a href="https://www.thewire.co.uk/issues/449" target="_blank">The Wire</a> magazine.</p>

      </div>

      <div class="row mx-0">

        <div class="col-md-3 ml-2 col-sm-2">
            <audio id="audio-player" controls="controls">
              <source id="audio-source" src="" type="audio/mp3" />
              Your browser does not support the audio element.
            </audio>
        </div>

        <div class="d-flex col-md-6 align-items-center">
          <p class="h5" id="tagmenu">You are now listening to <span id="player-station">(null)</span>. <a onclick="" href="#">Play a random station</a> or <a onclick="" href="#">shuffle stations</a> or<wbr> <a onclick="" href="#">show only stations that are live right now</a>.</p>
        </div>

        </div>

      </div>
    </header>

    <div>


    <div>

    <section class="page">

      <div class="row mx-0 row-cols-xl-5 row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 mb-3">

          {% for station in pages("_stations") %}

              <div class="col themed-grid-col">
                  <div class="card">
                      <img src="{{ assets_url }}/images/{{ station.meta.logo }}" class="card-img-top img-fluid" alt="{{ station.meta.title }} logo">
                      <div class="card-body">
                          <h5 class="card-title">{{ station.title }}</h5 station.title >
                          <h6 class="card-subtitle mb-2 text-muted"><span alt="location">{{ station.meta.location }}</span></h6>
                          <h6 class="card-subtitle mb-2 text-muted"><span alt="location">{{ station.meta.play_time }}</span></h6>
                          <p class="card-text">{{ station.meta.description }}</p>
                      </div>
                      <ul class="list-group list-group-flush">
                          <li class="list-group-item"><a href="{{station.meta.url}}" target="_blank">Website</a></li>
                          <li class="list-group-item"><a href="{% if station.meta.support is not empty %}{{station.meta.support}}" target="_blank{% else %}mailto:{{ config.contact }}?subject={{ station.title }} information&body=Hi, here's some additional information on {{ station.title }}: " class="link-danger{% endif %}">{% if station.meta.support is empty %}Submit a support link{% else %}Support the station</a>{% endif %}</a></li>
                          {% for stream in station.meta.stream_url %}
                          <button class="list-group-item fw-bold" onclick="loadStream('{{ station.meta.title }}', '{{ stream[1] }}')">Play {{ stream[0] }}</button>
                          {% endfor %}
                      </ul>
                  </div>
              </div>

          {% endfor %}


      </div>
    </div>
  </section> 
</div>

  <script>
  function loadStream(stationName, streamUrl){
      
      var player=document.getElementById('audio-player');
      var source=document.getElementById('audio-source');
      var listening=document.getElementById('player-station');
      
      source.src=streamUrl;
      listening.innerHTML=stationName;
      
      player.load(); //just start buffering (preload)
      player.play(); //start playing
  }

  </script>


    
</body>
</html>
